<Window
    x:Class="ScreenTimeMonitor.DashboardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Screen Time Dashboard"
    WindowStartupLocation="CenterScreen"
    Width="900" Height="600"
    MinWidth="600" MinHeight="400"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2D1B3F" Offset="0"/>
            <GradientStop Color="#1E1E1E" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#7B2FBE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9B3FEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7B2FBE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
    <Grid>
                                <TextBlock x:Name="PlaceholderText" 
                                         Text="Search applications..."
                                         Foreground="#666666"
                                         Margin="{TemplateBinding Padding}"
                                         Visibility="Collapsed"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="0"
                                            VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderThickness="1" BorderBrush="#3D3D3D" CornerRadius="10">
        <Grid Background="{StaticResource BackgroundGradient}">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Background="#2D1B3F" MouseLeftButtonDown="DragWindow">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Screen Time Dashboard"
                         Foreground="White"
                         FontSize="14"
                         FontFamily="Inter"
                         Margin="12,0,0,0"
                         VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal"
                          HorizontalAlignment="Right">
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Click="MinimizeWindow"
                            Content="ðŸ—•"
                            FontSize="16"/>
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Click="CloseWindow"
                            Content="âœ•"
                            FontSize="16"/>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Today's Screen Time" 
                          FontSize="24" 
                          FontWeight="SemiBold"
                          FontFamily="Inter"
                          Foreground="White"
                          Margin="0,0,0,15"/>

                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,15">
                    <TextBox x:Name="SearchBox"
                             Width="250"
                             Style="{StaticResource SearchBox}"
                             TextChanged="SearchBox_TextChanged"
                             Margin="0,0,10,0"
                             VerticalAlignment="Center"/>
                    
                    <Button x:Name="RefreshButton" 
                            Content="Refresh" 
                            Click="RefreshData"
                            Style="{StaticResource ModernButton}"
                            Margin="0,0,10,0"/>
                    
                    <Button x:Name="DeleteSelectedButton"
                            Content="Delete Selected"
                            Click="DeleteSelected"
                            Style="{StaticResource ModernButton}"
                            Margin="0,0,10,0"/>

                    <Button x:Name="ShowAnalysisButton"
                            Content="Show Analysis"
                            Click="ShowAnalysis"
                            Style="{StaticResource ModernButton}"/>
                </StackPanel>

                <DataGrid x:Name="DataGrid" 
                          Grid.Row="2"
                          AutoGenerateColumns="False" 
                          IsReadOnly="False"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="1"
                          BorderBrush="#3D3D3D"
                          Background="#2D2D2D"
                          RowBackground="#2D2D2D"
                          AlternatingRowBackground="#252525"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow"
                          EnableRowVirtualization="True"
                          VerticalGridLinesBrush="Transparent"
                          HorizontalGridLinesBrush="#3D3D3D"
                          FontFamily="Inter"
                          Foreground="White">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#1E1E1E"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontFamily" Value="Inter"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#3D3D3D"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#7B2FBE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3D3D3D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Select" 
                                              Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                              Width="60"/>
                        <DataGridTextColumn Header="Application" 
                                          Binding="{Binding Application}" 
                                          Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="10,5"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontFamily" Value="Inter"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Active Time" 
                                          Binding="{Binding ActiveTime}" 
                                          Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="10,5"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontFamily" Value="Inter"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Idle Time" 
                                          Binding="{Binding IdleTime}" 
                                          Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="10,5"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontFamily" Value="Inter"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Total Time" 
                                          Binding="{Binding TotalTime}" 
                                          Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="10,5"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontFamily" Value="Inter"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
    </Grid>
    </Border>
</Window> 